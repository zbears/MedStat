<?xml version="1.0" encoding="UTF-8" ?>
<configuration>
    <!-- 1800: org.bluetooth.service.generic_access -->
    <service uuid="1800" id="s_generic_access">
      <description>Generic Access</description>
       <!-- 2A00: org.bluetooth.characteristic.gap.device_name -->
      <characteristic uuid="2A00" id="c_device_name">
        <description>Device Name</description>
        <properties read="true" const="true" />
        <value>MedStat2</value>
      </characteristic>
      <!-- 2A01: org.bluetooth.characteristic.gap.appearance -->
      <characteristic uuid="2A01" id="c_appearance">
        <description>Appearance</description>
        <properties read="true" const="true" />
        <!-- Generic device, Generic category -->
        <value type="hex">0000</value>
      </characteristic>
    </service>

    <!-- custom service for Port output setting -->
    <service uuid="624e957f-cb42-4cd6-bacc-84aeb898f69b" advertise="true">
      <description>Custom Output Setting Service</description>
        
      <!-- custom read/write characteristic for getting/setting I/O port status --> 
      <characteristic uuid="df342b03-53f9-43b4-acb6-62a63ca0615a" id="c_port_status">
          <description>IO Port Status</description>
          <properties read="true" write="true" />
          <value length="1"/>
      </characteristic>
    </service>

    <!-- custom service for sending the heartrate value -->
    <service uuid="c0854170-d12a-46c0-b491-a6bff25b48a1" advertise="true">
      <description>Heartrate sensor output</description>
      <characteristic uuid="932a5eac-e2e2-4968-8ec0-92cac3c9f72b" id="c_heartrate_value">
        <properties read="true" notify="true" />
        <value length="2" />
      </characteristic>
    </service>

    <service uuid="d0854170-d12a-46c0-b491-a6bff25b48a1" advertise="true">
      <description>Accelerometer value output</description>
      <characteristic uuid="e0854170-d12a-46c0-b491-a6bff25b48a1" id="c_accel_value">
        <properties read="true" notify="true" />
        <value length="3" />
      </characteristic>
    </service>

</configuration>
